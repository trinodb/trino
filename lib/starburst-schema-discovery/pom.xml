<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.trino</groupId>
        <artifactId>trino-root</artifactId>
        <version>440-cork-1-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <groupId>io.starburst.schema-discovery</groupId>
    <artifactId>starburst-schema-discovery</artifactId>
    <packaging>pom</packaging>
    <description>Schema Discovery root pom</description>

    <licenses>
        <license>
            <name>Starburst Data</name>
            <distribution>manual</distribution>
            <comments>This is unpublished proprietary source code of Starburst Data. Redistribution of this material is strictly prohibited.</comments>
        </license>
    </licenses>

    <modules>
        <module>schema-discovery-core</module>
        <module>schema-discovery-internal-cli</module>
        <module>schema-discovery-test</module>
        <module>schema-discovery-trino-system-table</module>
    </modules>

    <properties>
        <air.main.basedir>${project.parent.basedir}</air.main.basedir>
        <air.license.header-file>${starburst-license.header-file}</air.license.header-file>

        <dep.univocity-parsers.version>2.8.3</dep.univocity-parsers.version>
        <dep.flatten-maven-plugin.version>1.2.7</dep.flatten-maven-plugin.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.univocity</groupId>
                <artifactId>univocity-parsers</artifactId>
                <version>${dep.univocity-parsers.version}</version>
            </dependency>

            <dependency>
                <groupId>io.starburst.schema-discovery</groupId>
                <artifactId>schema-discovery-core</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>io.starburst.schema-discovery</groupId>
                <artifactId>schema-discovery-internal-cli</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>flatten-maven-plugin</artifactId>
                    <version>${dep.flatten-maven-plugin.version}</version>
                    <configuration>
                        <flattenMode>resolveCiFriendliesOnly</flattenMode>
                        <updatePomFile>true</updatePomFile>
                        <outputDirectory>${project.build.directory}</outputDirectory>
                        <flattenedPomFilename>pom.xml</flattenedPomFilename>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>flatten</goal>
                            </goals>
                            <phase>process-resources</phase>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>org.basepom.maven</groupId>
                    <artifactId>duplicate-finder-maven-plugin</artifactId>
                    <configuration>
                        <ignoredResourcePatterns>
                            <ignoredResourcePattern>iceberg-build.properties</ignoredResourcePattern>
                        </ignoredResourcePatterns>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
